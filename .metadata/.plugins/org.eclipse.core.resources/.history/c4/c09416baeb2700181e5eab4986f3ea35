package com.projeto.condicionais;

public class condicional {

	public static void main(String[] args) {
		
		//			OPERADOR IF 
				// Usado para testar condições.
		// Criando 2 variáveis
		// Atribuindo o valor da variavel soma, à soma das duas variaveis criadas à cima
		// Testando para ver se soma é igual a dois, se sim printa "Verdadeiro", se não, não printa nada.
		int v1=1;
		int v2=1;
		int soma = v1+v2;
		if( soma==2 ){
			System.out.println("Verdadeiro");	
		}else {
			System.out.println("Falso");	
		}
	}

}
