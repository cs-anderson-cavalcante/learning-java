package com.projeto.condicionais;

public class condicional {

	public static void main(String[] args) {
		
		//			OPERADOR ELSE IF
		// Usado para testar condições.
		// Criando 2 variáveis
		// Atribuindo o valor da variavel soma, à soma das duas variaveis criadas à cima
		// Testando para ver se soma é igual a dois, se sim printa "Verdadeiro", se não, não printa "Falso.
		int media = 6;
		if( media <= 5 ){
			System.out.println("REPROVADO");	
		}else if( media = 6) { //Se a operação à cima não for verdadeira, ele printa  "Falso"
			System.out.println("APROVADO");	
			}
	}

}
